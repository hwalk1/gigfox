              <div class="col-3 card">
                <p>tag</p>
              </div>

              <div class="col-3 card">
                <p>tag</p>
              </div>

              <div class="col-3 card">
                <p>tag</p>
              </div>

              <div class="col-3 card">
                <p>tag</p>
              </div>
            </div>

            <div class="row justify-content-center">
              <div class="col-3 card">
                <p>tag</p>
              </div>

              <div class="col-3 card">
                <p>tag</p>
              </div>

              <div class="col-3 card">
                <p>tag</p>
              </div>

              <div class="col-3 card">
                <p>tag</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
