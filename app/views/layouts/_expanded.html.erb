<head>
  <link href=”https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css” rel=”stylesheet” integrity=”sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU” crossorigin=”anonymous”>
</head>
<div class="card mb-3" data-controller="total-cost" data-total-cost-price-value = "<%= @venue.price_per_hour.to_i %>">
  <div class="row">
    <div class="expanded-card">
      <img class="card-img-top" src="<%= @venue.picture_url %>" alt="Venue image">
    </div>
    <div class="card-body">
      <h1><%= @venue.name %></h1>
      <p><%= @venue.description %></p>
      <p><%= @venue.location %></p>
      <p><%= @venue.price_per_hour.to_s %></p>
      <p><%= @venue.room_size %></p>
    </div>
    <%= simple_form_for [ @venue, @booking ] do |f| %>
      <%= f.input :start_time %>
      <%= f.input :duration, collection: 1..24, include_blank: false, input_html: { data: {action: "change->total-cost#showTotal"}} %>
      <p >Total: <span data-total-cost-target="price"></span></p>
      <%= f.submit "Submit Booking", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="card mb-3">
  <img class="card-img-top" src="..." alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">Card title</h5>
    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
  </div>
</div>
