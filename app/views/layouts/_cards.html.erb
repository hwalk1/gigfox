<head>
  <link href=”https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css” rel=”stylesheet” integrity=”sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU” crossorigin=”anonymous”>
  <%# <meta name="viewport" content="width=device-width, initial-scale=1.0"> %>
</head>
<div class="container">
  <div class="row">
    <div class="home-container">
      <% @venues.each do |venue| %>
        <div class="card home text-center">
          <img class="card-img-top" src="<%= venue.picture_url %>" alt="Card image">
          <div class="card-body">
            <div class="card-info d-flex flex-column justify-content-between">
              <h5 class="card-title"><strong><%= venue.name %></strong></h5>
              <p class="card-details"><%= venue.description %></p>
              <div class="d-flex justify-content-around">
                <div>
                  <i class="fa-solid fa-people-group"></i>
                  <p class="card-size"><%= venue.room_size %></p>
                </div>
                <div>
                  <i class="fa-solid fa-dollar-sign"></i>
                  <p class="card-price"><%= venue.price_per_hour %></p>
                </div>
                <%# <i class="fa-solid fa-location-dot"></i> %>
              </div>
            </div>
            <%= link_to 'Book Now', venue_path(venue), class:"btn book stretched-link w-100" %>

          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
