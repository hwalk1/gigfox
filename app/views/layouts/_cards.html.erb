<head>
  <link href=”https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css” rel=”stylesheet” integrity=”sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU” crossorigin=”anonymous”>
  <%# <meta name="viewport" content="width=device-width, initial-scale=1.0"> %>
</head>
<div class="container">
  <div class="row">
    <div class="home-container">
      <% @venues.each do |venue| %>
        <div class="card home">
          <% if defined?venue.photo.key%>
            <%= cl_image_tag venue.photo.key, class: "card-img-top" %>
            <%else%>
            <img class="card-img-top" src="<%= venue.picture_url %>" alt="Card image">
            <% end %>
          <div class="card-body">
           <div>
            <h5 class="card-title"><strong><%= venue.name %></strong></h5>
            <p class="card-details"><%= venue.description %></p>
            <p class="card-details">Room Size: <%= venue.room_size %></p>
           </div>
            <p class="card-price">$<%= venue.price_per_hour %></p>

            <%= link_to 'Book Now', venue_path(venue), class:"btn stretched-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
